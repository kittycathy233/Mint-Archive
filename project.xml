<?xml version="1.0" encoding="utf-8"?>
<project xmlns="http://lime.software/project/1.0.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://lime.software/project/1.0.2 http://lime.software/xsd/project-1.0.2.xsd">

	<!-- APP Meta -->
	<app title="Mint Archive" file="Mint Archive" package="com.kittycathy.mtarchive" main="Main" version="0.0.1" path="export" company="KittyCathy" />

	<!-- <app main="MainStarling" path="export" file="SpineHaxeExample" /> -->
	<!-- <app main="MainFlixel" path="export" file="SpineHaxeExample" /> -->
	<icon path="assets/images/game/icon.png" size="16" />
	<icon path="assets/images/game/icon.png" size="32" />
	<icon path="assets/images/game/icon.png" size="64" />

	<!--Minimum without FLX_NO_GAMEPAD: 11.8, without FLX_NO_NATIVE_CURSOR: 11.2-->
	<set name="SWF_VERSION" value="11.8" />

	<!-- Window -->
	<window width="1280" height="720" background="#000000" fps="60" />
	<window hardware="true" allow-shaders="true" require-shaders="true" depth-buffer="true" stencil-buffer="true" />
	<window fullscreen="false" borderless="false" vsync="false" allow-high-dpi="true"/>
	<window orientation="portrait" />

	<!--HTML5-specific-->
	<window if="html5" resizable="false" />

	<!--Desktop-specific-->
	<window if="desktop" orientation="landscape" fullscreen="false" resizable="true" />

	<!--Mobile-specific-->
	<window if="mobile" orientation="landscape" fullscreen="true" width="0" height="0" />


	<!-- ______________________________ Haxedefines _____________________________ -->

	<!--Enable the Flixel core recording system-->
	<!--<haxedef name="FLX_RECORD" />-->

	<!--Disable the right and middle mouse buttons-->
	<!--<haxedef name="FLX_NO_MOUSE_ADVANCED" />-->

	<!--Disable the native cursor API on Flash-->
	<!--<haxedef name="FLX_NO_NATIVE_CURSOR" />-->

	<!--Optimise inputs, be careful you will get null errors if you don't use conditionals in your game-->
	<!--haxedef name="FLX_NO_MOUSE" if="mobile" /-->
	<!--haxedef name="FLX_NO_KEYBOARD" if="mobile" /-->
	<!--haxedef name="FLX_NO_TOUCH" if="desktop" /-->
	<!--<haxedef name="FLX_NO_GAMEPAD" />-->

	<!--Disable the Flixel core sound tray-->
	<!--<haxedef name="FLX_NO_SOUND_TRAY" />-->

	<!--Disable the Flixel sound management code-->
	<!--<haxedef name="FLX_NO_SOUND_SYSTEM" />-->

	<!--Disable the Flixel core focus lost screen-->
	<!--<haxedef name="FLX_NO_FOCUS_LOST_SCREEN" />-->
	<haxedef name="NO_LOGO"/>

	<!--______________________________ Lib ______________________________-->

	<haxelib name="openfl" version="9.4.1"/>
	<haxelib name="starling" version="2.7.1"/>
	<haxelib name="flixel" version="6.1.0"/>
	<haxelib name="flixel-addons" version="3.3.2"/>
	<haxelib name="flixel-ui" version="2.6.4"/>
	<haxelib name="spine-haxe" version="4.2.7"/>
	<haxelib name="hxvlc" version="2.2.2"/>
	<haxelib name="json2object" version="3.11.0"/>
	<haxelib name="hxjsonast" version="1.1.0"/>
	<haxelib name="grig.audio" />
	<haxelib name="funkin.vis" />

	<!-- Assets -->
	<source path="source" />
	<assets path="assets" include="*" type="binary" />

	<assets path="assets/images" type="image"/>
	<assets path="assets/spr"/>
	<assets path="assets/fonts"/>
	<assets path="assets/sounds" type="sound"/>
	<assets path="assets/music" type="music"/>
	<assets path="assets/videos"/>
	<assets path="assets/vocals"/>

	<!-- LibVLC Logging for hxCodec -->
	<haxedef name="HXC_LIBVLC_LOGGING" if="debug" />

	<!--Disable the Flixel core debugger. Automatically gets set whenever you compile in release mode!-->
	<haxedef name="FLX_NO_DEBUG" unless="debug" />

	<!--Enable this for Nape release builds for a serious peformance improvement-->
	<haxedef name="NAPE_RELEASE_BUILD" unless="debug" />

</project>